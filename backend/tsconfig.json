{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["app/controller/*"],
      "@services/*": ["app/services/*"],
      "@validation/*": ["validation/*"],
      "@errors/*": ["/errors/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@repo/*": ["repository/*"],
      "*": ["node_modules/*"]
    }
  }
}
